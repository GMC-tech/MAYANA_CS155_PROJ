<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CountdownTimer">

    <EditText
        android:id="@+id/edit_text_input"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="455dp"
        android:layout_toEndOf="@+id/textView_work_label"
        android:hint="@string/input_time_hint_label"
        android:inputType="number"
        android:maxLength="4"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/text_view_countdown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView_work_label"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="256dp"
        android:layout_marginBottom="134dp"
        android:text="@string/countdown_display"
        android:textColor="@android:color/black"
        android:textSize="60sp" />

    <TextView
        android:id="@+id/textView_work_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView_break_label"
        android:layout_alignParentStart="true"
        android:layout_marginStart="108dp"
        android:layout_marginBottom="30dp"
        android:text="@string/work_countdown_label"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/textView_break_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button_start_pause"
        android:layout_alignParentStart="true"
        android:layout_marginStart="108dp"
        android:layout_marginBottom="41dp"
        android:text="@string/break_countdown_label"
        android:textColor="@color/black" />

    <Button
        android:id="@+id/button_start_pause"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="104dp"
        android:text="@string/timer_button_label" />

    <Button
        android:id="@+id/button_reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="162dp"
        android:layout_marginEnd="155dp"
        android:layout_marginBottom="40dp"
        android:text="@string/reset_button_label"
        android:visibility="invisible"
        tools:visibility="visible" />

    <Button
        android:id="@+id/button_set"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="21dp"
        android:layout_marginBottom="231dp"
        android:text="@string/set_button_label"
        android:textSize="12sp" />

</RelativeLayout>